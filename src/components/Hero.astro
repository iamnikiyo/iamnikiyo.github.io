---
import Badge from "./Badge.astro";
---

<section class="relative pt-12 md:pt-20 pb-12">
  <!-- Background Abstract Glow -->
  <div
    class="absolute -top-40 -left-20 w-[300px] md:w-[600px] h-[300px] md:h-[600px] bg-primary/10 rounded-full blur-[100px] pointer-events-none"
  ></div>

  <div class="relative z-10 max-w-7xl mx-auto px-6">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Left Column -->
      <div class="flex flex-col gap-6">
        <Badge text="Adobe Certified Expert" />

        <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight">
          Architecting <br />
          <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-blue-400"
          >
            Digital Experiences
          </span>
        </h1>

        <p
          class="text-lg md:text-xl text-gray-400 max-w-2xl mt-4 leading-relaxed"
        >
          Senior AEM Architect with 9+ years of experience delivering
          enterprise-scale solutions. Specializing in high-performance Sites
          architecture.
        </p>

        <div class="flex flex-wrap gap-4 mt-6">
          <a href="https://www.linkedin.com/in/nicolas-escobar-valle/" target="_blank" rel="noopener noreferrer">
            <button
              class="flex items-center justify-center rounded-lg h-12 px-8 bg-primary hover:bg-primary/90 text-white text-base font-bold transition-all shadow-[0_0_20px_rgba(19,127,236,0.25)] hover:shadow-[0_0_30px_rgba(19,127,236,0.4)]"
            >
              LinkedIn Profile
            </button>
          </a>
          <a href="#clients">
            <button
              class="flex items-center justify-center rounded-lg h-12 px-8 bg-transparent border border-white/20 hover:border-white text-white hover:bg-white/5 text-base font-bold transition-all"
            >
              View Projects
            </button>
          </a>
        </div>
      </div>

      <!-- Right Column -->
      <div class="relative">
        <img
          src="/hero-image.webp"
          alt="Abstract 3D render"
          class="rounded-2xl shadow-2xl shadow-primary/10"
          width="600"
          height="400"
        />
      </div>
    </div>

    <!-- Stats Section -->
    <div class="mt-20 md:mt-28 grid grid-cols-3 gap-8">
      <div class="text-center">
        <p class="text-primary font-bold text-5xl md:text-6xl">9+</p>
        <p class="text-gray-400 text-sm md:text-base mt-2">Years Exp.</p>
      </div>
      <div class="text-center">
        <p class="text-primary font-bold text-5xl md:text-6xl">20+</p>
        <p class="text-gray-400 text-sm md:text-base mt-2">Projects</p>
      </div>
      <div class="text-center">
        <p class="text-primary font-bold text-5xl md:text-6xl">100%</p>
        <p class="text-gray-400 text-sm md:text-base mt-2">Success Rate</p>
      </div>
    </div>
  </div>
</section>
