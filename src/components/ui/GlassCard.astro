--- 
interface Props {
  className?: string;
  hoverEffect?: boolean;
}

const { className, hoverEffect } = Astro.props;
---
<div 
  class={`
    glass-card rounded-xl p-6 border-white/5
    ${hoverEffect ? 'transition-all duration-300 hover:-translate-y-1 hover:border-primary/30 hover:shadow-[0_0_20px_rgba(19,127,236,0.15)]' : ''}
    ${className}
  `}
>
  <slot />
</div>
